{
  "name": "how7-backend",
  "version": "1.0.0",
  "description": "HOW VII - Backend HTTP/REST para análise de vendas imobiliárias",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:md": "prettier --write **/*.md",
    "format:all": "prettier --write **/*.{ts,js,md,json,yml,yaml}",
    "spell:check": "cspell '**/*.{ts,js,md,json}'",
    "spell:check-silent": "cspell '**/*.{ts,js,md,json}' --silent",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "migrate": "npm run build && node dist/db/migrate.js",
    "seed": "npm run build && node dist/db/seed.js",
    "evidence:generate": "node scripts/generate-evidence.js",
    "agent:docs": "node scripts/agent-cmd.js",
    "docs:validate": "node scripts/agent-cmd.js"
  },
  "keywords": [
    "node",
    "express",
    "mysql",
    "rest",
    "analytics"
  ],
  "author": "HOW VII Team",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.0.0",
    "mysql2": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "cspell": "^8.8.0",
    "eslint": "^8.57.1",
    "prettier": "^3.3.0",
    "supertest": "^7.0.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
