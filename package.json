{
  "name": "how7-backend",
  "version": "1.0.0",
  "description": "HOW VII - Backend HTTP/REST para análise de vendas imobiliárias",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "migrate": "npm run build && node dist/db/migrate.js",
    "seed": "npm run build && node dist/db/seed.js",
    "evidence:generate": "node scripts/generate-evidence.js"
  },
  "keywords": ["node", "express", "mysql", "rest", "analytics"],
  "author": "HOW VII Team",
  "license": "MIT",
  "dependencies": {
    "express": "^5.0.0",
    "mysql2": "^3.11.0",
    "dotenv": "^16.4.5",
    "zod": "^3.22.4",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.0",
    "@types/cors": "^2.8.17",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0",
    "supertest": "^7.0.0",
    "@types/supertest": "^6.0.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
