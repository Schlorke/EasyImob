{
  "name": "how7-backend",
  "version": "1.0.0",
  "description": "HOW VII - Backend HTTP/REST para análise de vendas imobiliárias",
  "keywords": [
    "node",
    "express",
    "mysql",
    "rest",
    "analytics"
  ],
  "license": "MIT",
  "author": "HOW VII Team",
  "main": "dist/server.js",
  "scripts": {
    "agent:docs": "node scripts/agent-cmd.js",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "docs:validate": "node scripts/agent-cmd.js",
    "evidence:generate": "node scripts/generate-evidence.js",
    "format": "prettier --write src/**/*.ts",
    "format:all": "prettier --write **/*.{ts,js,md,json,yml,yaml}",
    "format:md": "prettier --write **/*.md",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migrate": "npm run build && node dist/db/migrate.js",
    "seed": "npm run build && node dist/db/seed.js",
    "spell:check": "cspell '**/*.{ts,js,md,json}'",
    "spell:check-silent": "cspell '**/*.{ts,js,md,json}' --silent",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@edge-runtime/vm": "latest",
    "@remix-run/react": "latest",
    "@sveltejs/kit": "latest",
    "@tanstack/react-query": "latest",
    "@tanstack/react-query-devtools": "latest",
    "@types/debug": "latest",
    "@vercel/analytics": "latest",
    "@vitest/browser": "latest",
    "@vitest/ui": "latest",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "latest",
    "dotenv": "latest",
    "express": "latest",
    "fs": "latest",
    "geist": "latest",
    "happy-dom": "latest",
    "jsdom": "latest",
    "lucide-react": "^0.454.0",
    "mysql2": "latest",
    "next": "15.2.4",
    "path": "latest",
    "react": "^19",
    "react-dom": "^19",
    "recharts": "latest",
    "svelte": "latest",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "vue": "latest",
    "vue-router": "latest",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "cspell": "^8.8.0",
    "eslint": "^8.57.1",
    "postcss": "^8.5",
    "prettier": "^3.3.0",
    "supertest": "^7.0.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}